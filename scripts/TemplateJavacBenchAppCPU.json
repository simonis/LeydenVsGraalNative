{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "title": {
    "text" : "JavacBenchApp __ITERATIONS__",
    "anchor": "middle",
    "offset": 20
  },
  "data": {
    "values" : [
__DATA__
    ]
  },
  "transform": [
    {
      "window": [
        {
          "op": "row_number",
          "as": "nr"
        }
      ]
    },
    {
      "window": [
        {
          "op": "first_value",
          "field": "wall",
          "as": "wall_default"
        }
      ],
      "sort": [
        {
          "field": "nr",
          "order": "ascending"
        }
      ]
    },
    {
      "window": [
        {
          "op": "lag",
          "param": 1,
          "field": "wall",
          "as": "wall_previous"
        }
      ],
      "sort": [
        {
          "field": "nr",
          "order": "ascending"
        }
      ]
    },
    {
      "calculate": "datum.file == 'wall clock time' ? datum.wall : toNumber(datum.user) + toNumber(datum.system)",
      "as" : "time_val"
    },
    {
      "calculate": "datum.file == 'wall clock time' ? datum.time_val/datum.wall_default : datum.time_val/datum.wall_previous",
      "as" : "percentage"
    }
  ],
  "facet": {
    "column": {
      "field": "file",
      "type": "nominal",
      "title": "",
      "header": {
        "labelAngle": 0,
        "labelAlign": "center",
        "labelAnchor": "middle",
        "labelOrient": "bottom",
        "labelFontWeight": "bold"
      },
      "sort": [
        "wall clock time", "user+sys time (% rel. to wall time)"
      ]
    }
  },
  "spec": {
    "encoding": {
      "y": {
        "field": "time_val",
        "type": "quantitative",
        "axis": {
          "title": "time (ms)",
          "grid": true
        }
      },
      "x": {
        "field": "type",
        "type": "nominal",
        "axis": {
          "labels": false,
          "ticks":false,
          "domainWidth": 0,
          "title": ""
        },
        "sort" : [
__SORT__
        ]
      }
    },
    "layer": [{
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "type",
          "type": "nominal",
          "legend": {
            "title" : "",
            "offset" : null,
            "zindex": 1
          },
          "sort" : [
__SORT__
          ]
        }
      }
    }, {
      "mark": {
        "type": "text",
        "dx": 5,
        "angle": 270,
        "baseline": "middle",
        "align": "left"
      },
      "encoding": {
        "text": {
          "field": "percentage",
          "type": "nominal",
          "format": ".0%"
        }
      }
    }]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
